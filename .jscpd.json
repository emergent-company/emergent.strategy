{
  "$schema": "https://json.schemastore.org/jscpd.json",
  "threshold": 7,
  "reporters": ["console", "json"],
  "output": "./reports/jscpd",
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/backups/**",
    "**/archive/**",
    "**/logs/**",
    "**/*.d.ts",
    "**/migrations/**"
  ],
  "minLines": 10,
  "minTokens": 50,
  "format": ["typescript", "tsx", "javascript", "jsx", "css"],
  "absolute": true,
  "gitignore": true
}
