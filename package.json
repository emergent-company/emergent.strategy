{
  "name": "spec-server",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/admin",
    "apps/server-nest"
  ],
  "type": "module",
  "scripts": {
    "dev:server": "tsx watch apps/server/src/server.ts",
    "dev:server-nest": "npm --prefix apps/server-nest run start:dev",
    "dev:admin": "npm --prefix apps/admin run dev",
    "dev:storybook": "npm --prefix apps/admin run storybook",
    "dev:all": "concurrently -n server,admin -c blue,magenta \"npm run dev:server\" \"npm run dev:admin\" ",
    "dev": "npm run dev:all",
    "start": "node apps/server/dist/server.js",
    "build:server": "tsc -p apps/server/tsconfig.json",
    "build:server-nest": "npm --prefix apps/server-nest run build",
    "build:admin": "npm --prefix apps/admin run build",
    "build": "npm run build:server && npm run build:server-nest && npm run build:admin",
    "spec:gen:nest": "npm --prefix apps/server-nest run gen:openapi",
    "spec:diff": "node scripts/diff-openapi.js",
    "db:init": "tsx scripts/init-db.ts",
    "test:smoke": "tsx scripts/smoke-test.ts",
    "mcp:db": "node .vscode/mcp.js",
    "check:stories": "node scripts/check-stories.mjs",
    "ref:init": "git submodule update --init --recursive",
    "ref:pull": "git -C reference/nexus pull origin master",
    "e2e:real": ". ./.env && E2E_REAL_LOGIN=1 npm --prefix apps/admin run e2e",
    "e2e:ui:real": ". ./.env && E2E_REAL_LOGIN=1 npm --prefix apps/admin run e2e:ui",
    "e2e:setup:real": ". ./.env && E2E_REAL_LOGIN=1 npm --prefix apps/admin run e2e:setup",
    "e2e:auth:real": ". ./.env && E2E_REAL_LOGIN=1 npm --prefix apps/admin run e2e:auth"
  },
  "dependencies": {
    "@langchain/google-genai": "^0.2.1",
    "@modelcontextprotocol/sdk": "^1.1.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jose": "^5.9.6",
    "html-to-text": "^9.0.5",
    "langchain": "^0.3.3",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.12.0",
    "zod": "^3.23.8",
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.4.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/html-to-text": "^9.0.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.17.2",
    "@types/pg": "^8.15.5",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  }
}