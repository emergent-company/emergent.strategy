{
  "name": "spec-server",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/admin",
    "apps/server-nest",
    "mcp-dev-manager"
  ],
  "type": "module",
  "scripts": {
    "clean": "npm --prefix apps/server-nest run clean || true && rimraf apps/admin/dist || true",
    "dev:server-nest": "npm --prefix apps/server-nest run start:dev",
    "dev:admin": "npm --prefix apps/admin run dev",
    "dev:storybook": "npm --prefix apps/admin run storybook",
    "dev:all": "concurrently -n api,admin -c blue,magenta \"npm run dev:server-nest\" \"npm run dev:admin\" ",
    "dev": "node scripts/dev-manager.mjs start --background",
    "dev:legacy": "npm run dev:all",
    "dev:stop": "node scripts/dev-manager.mjs stop",
    "dev:restart": "node scripts/dev-manager.mjs restart --background",
    "dev:status": "node scripts/dev-manager.mjs status",
    "restart:all": "node scripts/dev-manager.mjs restart --background",
    "dev:foreground": "node scripts/dev-manager.mjs start",
    "dev-manager:admin:e2e": "node scripts/ensure-e2e-deps.mjs && cd apps/admin && npx playwright test e2e/specs --config=e2e/playwright.config.ts --project=chromium --workers=1 --reporter=list",
    "dev-manager:admin:e2e:console-errors": "node scripts/ensure-e2e-deps.mjs && cd apps/admin && npx playwright test e2e/specs/console-errors.all-pages.spec.ts --config=e2e/playwright.config.ts --project=chromium --workers=1 --reporter=list",
    "dev-manager:admin:e2e:console-errors:with-logs": "node scripts/run-e2e-with-logs.mjs console-errors.all-pages.spec.ts",
    "dev-manager:admin:e2e:clickup": "node scripts/ensure-e2e-deps.mjs && cd apps/admin && npx playwright test e2e/specs/integrations.clickup.spec.ts --config=e2e/playwright.config.ts --project=chromium --workers=1 --reporter=list",
    "dev-manager:admin:e2e:chat": "node scripts/ensure-e2e-deps.mjs && cd apps/admin && npx playwright test e2e/specs/chat.*.spec.ts --config=e2e/playwright.config.ts --project=chromium --workers=1 --reporter=list",
    "dev-manager:admin:e2e:ui": "echo 'UI mode requires user interaction - use run_in_terminal instead' && exit 1",
    "dev-manager:admin:e2e:headed": "echo 'Headed mode requires user interaction - use run_in_terminal instead' && exit 1",
    "dev-manager:admin:e2e:debug": "echo 'Debug mode requires user interaction - use run_in_terminal instead' && exit 1",
    "dev-manager:admin:build": "npm --prefix apps/admin run build",
    "dev-manager:admin:test": "npm --prefix apps/admin run test",
    "dev-manager:admin:test:coverage": "npm --prefix apps/admin run test:coverage",
    "dev-manager:admin:storybook": "npm --prefix apps/admin run storybook",
    "dev-manager:server:test": "npm --prefix apps/server-nest run test",
    "dev-manager:server:test:openapi": "npm --prefix apps/server-nest run test -- tests/openapi-regression.spec.ts",
    "dev-manager:server:test:e2e": "npm --prefix apps/server-nest run test:e2e",
    "dev-manager:server:test:coverage": "npm --prefix apps/server-nest run test:coverage",
    "dev-manager:server:build": "npm --prefix apps/server-nest run build",
    "dev-manager:server:seed:extraction": "tsx scripts/seed-extraction-demo.ts",
    "dev-manager:server:start": "npm --prefix apps/server-nest run start:dev",
    "dev-manager:docker:up": "cd docker && docker compose up -d",
    "dev-manager:docker:down": "cd docker && docker compose down",
    "dev-manager:docker:restart": "cd docker && docker compose restart",
    "dev-manager:docker:logs": "cd docker && docker compose logs --tail=100",
    "dev-manager:logs:snapshot": "node scripts/collect-service-logs.mjs",
    "dev-manager:logs:clear": "node scripts/clear-logs.mjs",
    "dev-manager:docker:logs:follow": "echo 'Log following requires user interaction (Ctrl-C to stop) - use run_in_terminal instead' && exit 1",
    "dev-manager:docker:ps": "cd docker && docker compose ps",
    "start": "node apps/server-nest/dist/main.js",
    "build:server-nest": "npm --prefix apps/server-nest run build",
    "build:admin": "npm --prefix apps/admin run build",
    "build": "npm run clean && npm run build:server-nest && npm run build:admin",
    "test:e2e:server": "npm --prefix apps/server-nest run test:e2e",
    "test:scenarios:server": "npm --prefix apps/server-nest run test:scenarios",
    "spec:diff": "node scripts/diff-openapi.js",
    "db:init": "tsx scripts/init-db.ts",
    "db:reset": "tsx scripts/reset-db.ts",
    "db:full-reset": "tsx scripts/full-reset-db.ts",
    "db:migrate": "tsx scripts/run-migrations.ts",
    "migrate:embedding-dimension": "tsx scripts/migrate-embedding-dimension.ts",
    "test:smoke": "tsx scripts/smoke-test.ts",
    "mcp:db": "node .vscode/mcp.js",
    "check:stories": "node scripts/check-stories.mjs",
    "ref:init": "git submodule update --init --recursive",
    "ref:pull": "git -C reference/nexus pull origin master",
    "e2e:admin:real": ". ./.env && E2E_REAL_LOGIN=1 npm --prefix apps/admin run e2e",
    "e2e:admin:ui": ". ./.env && E2E_REAL_LOGIN=1 npm --prefix apps/admin run e2e:ui",
    "e2e:admin:setup": ". ./.env && E2E_REAL_LOGIN=1 npm --prefix apps/admin run e2e:setup",
    "bench:graph:relationships": "npm --prefix apps/server-nest run bench:graph:relationships",
    "bench:graph:objects": "npm --prefix apps/server-nest run bench:graph:objects",
    "bench:graph:traverse": "npm --prefix apps/server-nest run bench:graph:traverse",
    "test:coverage:admin": "npm --prefix apps/admin run test:coverage",
    "test:coverage:server": "npm --prefix apps/server-nest run test:coverage",
    "test:coverage:server:e2e": "npm --prefix apps/server-nest run test:coverage:e2e",
    "test:coverage:server:all": "npm run test:coverage:server && npm run test:coverage:server:e2e",
    "test:coverage:all": "npm run test:coverage:server && npm run test:coverage:admin"
  },
  "dependencies": {
    "@langchain/google-genai": "^0.2.1",
    "@modelcontextprotocol/sdk": "^1.1.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jose": "^5.9.6",
    "html-to-text": "^9.0.5",
    "langchain": "^0.3.3",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.12.0",
    "zod": "^3.23.8",
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.4.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "concurrently": "^9.1.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/html-to-text": "^9.0.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.17.2",
    "@types/pg": "^8.15.5",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  }
}