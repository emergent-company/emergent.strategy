{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workflow Schema",
  "description": "Defines the structure for state machines and workflow configurations.",
  "oneOf": [
    {
      "title": "State Machine Definition",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the state machine"
        },
        "initial_state": {
          "type": "string",
          "description": "The starting state"
        },
        "states": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of all possible states"
        },
        "transitions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the transition"
              },
              "from": {
                "oneOf": [
                  {
                    "type": "string",
                    "description": "Single source state"
                  },
                  {
                    "type": "array",
                    "items": { "type": "string" },
                    "description": "Multiple source states (any of these can trigger the transition)"
                  }
                ],
                "description": "Source state(s)"
              },
              "to": {
                "type": "string",
                "description": "Destination state"
              }
            },
            "required": ["name", "from", "to"]
          }
        }
      },
      "required": ["name", "initial_state", "states", "transitions"]
    },
    {
      "title": "Workflow Configuration",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the configuration"
        },
        "applies_to_machine": {
          "type": "string",
          "description": "Reference to the state machine file"
        },
        "state_policies": {
          "type": "array",
          "description": "Policies for specific states"
        },
        "migrations": {
          "type": "array",
          "description": "Migration rules between states"
        },
        "notifications": {
          "type": "array",
          "description": "Notification configurations"
        }
      },
      "required": ["name", "applies_to_machine"]
    }
  ]
}
