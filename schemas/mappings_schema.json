{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Mappings Schema",
  "description": "Defines the structure for linking value models to implementation artifacts.",
  "type": "object",
  "properties": {
    "product": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sub_component_id": {
            "type": "string",
            "description": "ID from the product value model"
          },
          "artifacts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["code", "design", "documentation", "test"],
                  "description": "Type of artifact"
                },
                "url": {
                  "type": "string",
                  "description": "URL to the artifact"
                },
                "description": {
                  "type": "string",
                  "description": "Brief description of the artifact"
                }
              },
              "required": ["type", "url"]
            }
          }
        },
        "required": ["sub_component_id", "artifacts"]
      }
    },
    "strategy": {
      "type": "array"
    },
    "org_ops": {
      "type": "array"
    },
    "commercial": {
      "type": "array"
    }
  },
  "required": ["product", "strategy", "org_ops", "commercial"]
}
