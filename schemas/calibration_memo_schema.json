{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Calibration Memo Schema",
  "description": "Defines the structure for cycle calibration memos that guide the next READY phase.",
  "type": "object",
  "properties": {
    "roadmap_id": {
      "type": "string",
      "description": "Reference to the completed roadmap"
    },
    "cycle": {
      "type": "integer"
    },
    "assessment_date": {
      "type": ["string", "null"]
    },
    "decision": {
      "type": "string",
      "enum": ["persevere", "pivot", "pull_the_plug", "pending_assessment"],
      "description": "The strategic decision for next steps"
    },
    "confidence": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    },
    "reasoning": {
      "type": "string",
      "description": "Explanation for the decision"
    },
    "learnings": {
      "type": "object",
      "properties": {
        "validated_assumptions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "invalidated_assumptions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "surprises": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "next_cycle_focus": {
      "type": "object",
      "properties": {
        "continue_building": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "stop_building": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "start_exploring": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "next_ready_inputs": {
      "type": "object",
      "properties": {
        "opportunity_update": {
          "type": "string"
        },
        "strategy_update": {
          "type": "string"
        },
        "new_assumptions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "next_steps": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["roadmap_id", "cycle", "decision", "reasoning", "next_steps"]
}
