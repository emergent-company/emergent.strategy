{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Insight Opportunity Schema",
  "description": "Defines the structure for documenting big opportunities in the INSIGHT phase.",
  "type": "object",
  "properties": {
    "opportunity": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the opportunity"
        },
        "title": {
          "type": "string",
          "description": "Clear, compelling title for the opportunity"
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the opportunity"
        },
        "context": {
          "type": "object",
          "properties": {
            "target_segment": {
              "type": "string"
            },
            "pain_points": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "market_size": {
              "type": "string"
            },
            "urgency": {
              "type": "string"
            }
          },
          "required": ["target_segment", "pain_points"]
        },
        "evidence": {
          "type": "object",
          "properties": {
            "quantitative": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "source": {
                    "type": "string"
                  },
                  "insight": {
                    "type": "string"
                  }
                }
              }
            },
            "qualitative": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "source": {
                    "type": "string"
                  },
                  "insight": {
                    "type": "string"
                  }
                }
              }
            },
            "competitive_landscape": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "value_hypothesis": {
          "type": "object",
          "properties": {
            "user_value": {
              "type": "string"
            },
            "business_value": {
              "type": "string"
            },
            "strategic_fit": {
              "type": "string"
            }
          },
          "required": ["user_value", "business_value"]
        },
        "success_indicators": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "metric": {
                "type": "string"
              },
              "target": {
                "type": "string"
              }
            }
          }
        },
        "status": {
          "type": "string",
          "enum": ["identified", "validated", "invalidated", "deferred"]
        },
        "confidence_level": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "validation_date": {
          "type": ["string", "null"],
          "format": "date"
        }
      },
      "required": ["id", "title", "description", "context", "value_hypothesis", "status"]
    }
  },
  "required": ["opportunity"]
}
