{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/schemas/actionItem.schema.json",
    "title": "ActionItem",
    "type": "object",
    "properties": {
        "type": {
            "const": "ActionItem"
        },
        "title": {
            "type": "string"
        },
        "owner": {
            "type": "string"
        },
        "due_date": {
            "type": "string",
            "format": "date"
        },
        "status": {
            "type": "string",
            "enum": [
                "open",
                "in_progress",
                "done",
                "blocked"
            ]
        },
        "evidence": {
            "type": "array",
            "items": {
                "$ref": "./evidence.schema.json"
            }
        }
    },
    "required": [
        "type",
        "title",
        "status"
    ],
    "additionalProperties": true
}