############################################
# E2E Test Environment Configuration
# This file is used by the ephemeral E2E database setup
############################################

# Database - pointing to E2E Docker container
POSTGRES_HOST=localhost
POSTGRES_PORT=5438
POSTGRES_USER=spec
POSTGRES_PASSWORD=spec
POSTGRES_DB=spec_e2e

# Disable dev features for clean test environment
ORGS_DEMO_SEED=false
SKIP_DB=false
SKIP_MIGRATIONS=1

# Use static test tokens (no real OIDC)
AUTH_TEST_STATIC_TOKENS=1
SCOPES_DISABLED=0

# Embeddings disabled for E2E (faster tests)
EMBEDDING_PROVIDER=vertex
VERTEX_EMBEDDING_MODEL=text-embedding-004
VERTEX_EMBEDDING_PROJECT=twentyfirst-io
VERTEX_EMBEDDING_LOCATION=europe-north1

# Server configuration
SERVER_PORT=3002
NAMESPACE=spec-server-2-e2e

# Disable extraction worker for tests
EXTRACTION_WORKER_ENABLED=false
E2E_DEBUG_CHAT=0

# Node environment
NODE_ENV=test
