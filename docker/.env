# Docker Compose Environment Variables
# This file configures the Docker services with a customizable prefix
# to avoid conflicts when running multiple instances

# Service prefix - change this to differentiate multiple instances
# Examples: spec2, myproject, dev1, etc.
COMPOSE_PROJECT_NAME=spec-2

# Namespace for container and volume naming
NAMESPACE=spec-server-2

# Database Configuration
DB_CONTAINER_NAME=spec-server-2-db-1
POSTGRES_USER=spec
POSTGRES_PASSWORD=spec
POSTGRES_DB=spec
POSTGRES_PORT=5437

# Zitadel Ports
ZITADEL_HTTP_PORT=8200
ZITADEL_LOGIN_PORT=8201
