# Copy to .env and fill in values
# Google Gemini API key
GOOGLE_API_KEY=

# Postgres connection
PGHOST=localhost
PGPORT=5432
PGUSER=spec
PGPASSWORD=spec
PGDATABASE=spec

# Server
PORT=3002

# Automatically create / migrate core schema on startup (true/false)
DB_AUTOINIT=true

# --- E2E Testing (server-nest) ---
# Optional dedicated database name for E2E tests. If unset will reuse PGDATABASE.
PGDATABASE_E2E=spec_e2e
# Flag to enable org demo seed (disabled for clean E2E fixtures typically)
ORGS_DEMO_SEED=false
