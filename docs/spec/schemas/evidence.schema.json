{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/schemas/evidence.schema.json",
    "title": "Evidence",
    "type": "object",
    "properties": {
        "chunk_id": {
            "type": "string"
        },
        "role": {
            "type": "string",
            "enum": [
                "source",
                "context",
                "counterexample",
                "rationale",
                "citation"
            ]
        },
        "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },
        "note": {
            "type": "string"
        }
    },
    "required": [
        "chunk_id",
        "role"
    ],
    "additionalProperties": true
}