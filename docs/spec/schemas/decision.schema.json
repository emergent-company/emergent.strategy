{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/schemas/decision.schema.json",
    "title": "Decision",
    "type": "object",
    "properties": {
        "type": {
            "const": "Decision"
        },
        "title": {
            "type": "string"
        },
        "status": {
            "type": "string",
            "enum": [
                "proposed",
                "accepted",
                "superseded",
                "rejected"
            ]
        },
        "context": {
            "type": "string"
        },
        "options": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "chosen_option": {
            "type": "string"
        },
        "consequences": {
            "type": "string"
        },
        "evidence": {
            "type": "array",
            "items": {
                "$ref": "./evidence.schema.json"
            }
        },
        "architecture_domain": {
            "type": "string"
        },
        "adm_phase": {
            "type": "string"
        }
    },
    "required": [
        "type",
        "title",
        "status"
    ],
    "additionalProperties": true
}