{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/schemas/risk.schema.json",
    "title": "Risk",
    "type": "object",
    "properties": {
        "type": {
            "const": "Risk"
        },
        "title": {
            "type": "string"
        },
        "likelihood": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
        },
        "impact": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
        },
        "mitigation": {
            "type": "string"
        },
        "evidence": {
            "type": "array",
            "items": {
                "$ref": "./evidence.schema.json"
            }
        }
    },
    "required": [
        "type",
        "title",
        "likelihood",
        "impact"
    ],
    "additionalProperties": true
}