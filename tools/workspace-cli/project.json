{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "workspace-cli",
  "projectType": "library",
  "sourceRoot": "tools/workspace-cli/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run build",
        "cwd": "tools/workspace-cli"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run lint",
        "cwd": "tools/workspace-cli"
      }
    },
    "verify": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run verify",
        "cwd": "tools/workspace-cli"
      }
    },
    "workspace:start": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node tools/workspace-cli/dist/cli.js start --workspace",
        "forwardAllArgs": true
      }
    },
    "workspace:start-all": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node tools/workspace-cli/dist/cli.js start --all",
        "forwardAllArgs": true
      }
    },
    "workspace:restart": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node tools/workspace-cli/dist/cli.js restart --workspace",
        "forwardAllArgs": true
      }
    },
    "workspace:stop": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node tools/workspace-cli/dist/cli.js stop --workspace",
        "forwardAllArgs": true
      }
    },
    "workspace:deps:start": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node tools/workspace-cli/dist/cli.js start --deps-only",
        "forwardAllArgs": true
      }
    },
    "workspace:deps:restart": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node tools/workspace-cli/dist/cli.js restart --deps-only",
        "forwardAllArgs": true
      }
    },
    "workspace:deps:stop": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node tools/workspace-cli/dist/cli.js stop --deps-only",
        "forwardAllArgs": true
      }
    },
    "workspace:status": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node tools/workspace-cli/dist/cli.js status --workspace --dependencies",
        "forwardAllArgs": true
      }
    }
  },
  "tags": ["scope:workspace"]
}
