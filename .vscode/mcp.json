{
  "servers": {
    // "figma": {
    //   "type": "http",
    //   "url": "http://127.0.0.1:3845/mcp"
    // },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--browser",
        "chromium",
        "--timeout-action=10000"
      ]
    },
    "postgres": {
      "command": "./scripts/mcp-postgres-wrapper.sh",
      "args": []
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "ctx7sk-77ad3f0a-32a5-4b23-8b82-1431d078b1c6"
      ]
    },
    "gh_grep": {
      "type": "http",
      "url": "https://mcp.grep.app"
    },
    "react-daisyui Docs": {
      "type": "sse",
      "url": "https://gitmcp.io/daisyui/react-daisyui"
    },
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest",
        "--browserUrl",
        "http://127.0.0.1:9222"
      ]
    },
    "logs": {
      "command": "npx",
      "args": ["tsx", "tools/logs-mcp/src/index.ts"],
      "env": {
        "LOGS_DIR": "./logs"
      }
    },
    "langfuse-docs": {
      "type": "http",
      "url": "https://langfuse.com/api/mcp"
    },
    "langfuse": {
      "command": "npx",
      "args": ["tsx", "tools/langfuse-mcp/src/index.ts"],
      "env": {
        "LANGFUSE_HOST": "${LANGFUSE_HOST}",
        "LANGFUSE_PUBLIC_KEY": "${LANGFUSE_PUBLIC_KEY}",
        "LANGFUSE_SECRET_KEY": "${LANGFUSE_SECRET_KEY}"
      }
    },
    "workspace": {
      "command": "npx",
      "args": ["tsx", "tools/workspace-mcp/src/index.ts"]
    },
    "kb": {
      "type": "http",
      "url": "${KB_MCP_URL:-https://admin.dev.emergent-company.ai/api/mcp/rpc}",
      "headers": {
        "Authorization": "Bearer ${KB_MCP_TOKEN:-data-read-token}",
        "Content-Type": "application/json",
        "X-Project-Id": "${KB_PROJECT_ID:-1e37ab78-f4af-4e61-9b71-5e263139525b}"
      }
    }
  }
}
