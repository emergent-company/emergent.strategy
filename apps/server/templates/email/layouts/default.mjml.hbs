<mjml>
  <mj-head>
    <mj-title>{{title}}</mj-title>
    <mj-preview>{{previewText}}</mj-preview>
    <mj-attributes>
      <mj-all font-family="'Helvetica Neue', Helvetica, Arial, sans-serif" />
      <mj-text font-size="14px" color="#374151" line-height="1.6" />
      <mj-button background-color="#4F46E5" color="#ffffff" font-size="14px" font-weight="600" inner-padding="12px 24px" border-radius="6px" />
    </mj-attributes>
    <mj-style>
      .body-section { background-color: #ffffff; }
    </mj-style>
  </mj-head>
  <mj-body background-color="#f3f4f6">
    {{!-- Header with logo --}}
    <mj-section padding="20px 0">
      <mj-column>
        <mj-text align="center" font-size="24px" font-weight="bold" color="#111827">
          {{#if logoText}}{{logoText}}{{else}}Emergent{{/if}}
        </mj-text>
      </mj-column>
    </mj-section>

    {{!-- Main content area --}}
    <mj-section css-class="body-section" padding="32px" border-radius="8px">
      <mj-column>
        {{{content}}}
      </mj-column>
    </mj-section>

    {{!-- Footer --}}
    <mj-section padding="24px">
      <mj-column>
        {{> footer}}
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
