# Server â€” Zitadel / OIDC (Dev)

# OIDC issuer (discovery URL will be `${ZITADEL_ISSUER_URL}/.well-known/openid-configuration`)
ZITADEL_ISSUER_URL=http://localhost:8080

# Audience your API expects (configure in Zitadel)
ZITADEL_AUDIENCE=spec-api

# If using confidential client flows server-side (optional for BFF/token exchange)
ZITADEL_CLIENT_ID=spec-api-server
ZITADEL_CLIENT_SECRET=change-me

# Cookie/session config (dev)
SESSION_COOKIE_NAME=spec_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=Lax
SESSION_SECRET=dev-secret-change-me

# CORS for SPA
# Align with admin app default port (ADMIN_APP_PORT / 5175)
CORS_ORIGIN=http://localhost:5175

# Server base
PORT=3000
