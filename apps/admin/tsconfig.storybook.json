{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "noEmit": false,
        "outDir": "./dist/.storybook",
        "types": [
            "vite/client"
        ]
    },
    "exclude": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.js",
        "src/**/*.test.js",
        "src/**/*.spec.tsx",
        "src/**/*.test.tsx",
        "src/**/*.spec.jsx",
        "src/**/*.test.js",
        "**/*.stories.ts",
        "**/*.stories.tsx",
        "**/*.stories.js",
        "**/*.stories.jsx"
    ],
    "include": [
        "src",
        "src/vite-env.d.ts",
        ".storybook"
    ]
}