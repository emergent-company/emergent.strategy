{
  "name": "spec-server-admin",
  "description": "Admin UI Interface for Spec Server",
  "version": "0.1",
  "private": true,
  "type": "module",
  "author": {
    "name": "Maciej Kucharz"
  },
  "scripts": {
    "precommit:validate": "node ../../scripts/validate-story-duplicates.mjs",
    "dev": "npx dotenv-cli -e .env -e .env.local -- vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier . --write",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "e2e": "playwright test -c tests/e2e/playwright.config.ts --reporter=list",
    "e2e:with-report": "playwright test -c tests/e2e/playwright.config.ts --reporter=html",
    "e2e:ui": "playwright test -c tests/e2e/playwright.config.ts --ui",
    "e2e:report": "playwright show-report",
    "e2e:setup": "playwright test -c tests/e2e/playwright.config.ts -g 'authenticate and save storage state'",
    "e2e:auth": "playwright test -c tests/e2e/playwright.config.ts tests/e2e/specs/authenticated.example.spec.ts",
    "e2e:smoke": "playwright test -c tests/e2e/playwright.config.ts tests/e2e/specs/smoke.spec.ts tests/e2e/specs/onboarding.first-login.spec.ts tests/e2e/specs/documents.aria.spec.ts tests/e2e/specs/perf.spec.ts",
    "e2e:onboarding": "playwright test -c tests/e2e/playwright.config.ts tests/e2e/specs/onboarding.first-login.spec.ts",
    "e2e:login:real": "playwright test -c tests/e2e/playwright.config.ts tests/e2e/specs/login.real.spec.ts",
    "e2e:real": "E2E_REAL_LOGIN=1 playwright test -c tests/e2e/playwright.config.ts",
    "stories:validate": "node ../../scripts/validate-story-duplicates.mjs",
    "storybook": "npm run stories:validate && nx run admin:serve:storybook -- --port=6006",
    "build-storybook": "npm run stories:validate && nx run admin:build:storybook"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.21.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "apexcharts": "^5.3.2",
    "choices.js": "^11.1.0",
    "date-fns": "^4.1.0",
    "filepond": "^4.32.8",
    "filepond-plugin-image-preview": "^4.6.12",
    "flatpickr": "^4.6.13",
    "motion": "^12.23.24",
    "quill": "^2.0.3",
    "react": "^19.1.1",
    "react-apexcharts": "^1.7.0",
    "react-dom": "^19.1.1",
    "react-filepond": "^7.1.3",
    "react-markdown": "^10.1.0",
    "react-router": "^7.7.1",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "simplebar-react": "^3.3.2",
    "sortablejs": "^1.15.6",
    "swiper": "^11.2.10",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@iconify-json/hugeicons": "^1.2.6",
    "@iconify-json/lucide": "^1.2.60",
    "@iconify-json/ri": "^1.2.5",
    "@iconify/tailwind4": "^1.0.6",
    "@playwright/test": "^1.48.2",
    "@storybook/addon-a11y": "^9.1.13",
    "@storybook/addon-docs": "^9.1.13",
    "@storybook/addon-links": "^9.1.13",
    "@storybook/react-vite": "^9.1.13",
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.16",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/sortablejs": "^1.15.8",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "babel-plugin-react-remove-properties": "^0.3.1",
    "daisyui": "^5.5.5",
    "dotenv": "^16.4.7",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "9.1.13",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "path": "^0.12.7",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "storybook": "^9.1.13",
    "tailwindcss": "^4.1.16",
    "tailwindcss-motion": "^1.1.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}
