{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2022",
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "vitest"
        ]
    },
    "include": [
        "src",
        "src/tests/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.spec.ts",
        "**/__tests__/**",
        ".api"
    ]
}