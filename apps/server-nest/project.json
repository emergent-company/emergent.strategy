{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "server-nest",
  "projectType": "application",
  "sourceRoot": "apps/server-nest/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm --prefix apps/server-nest run build",
        "forwardAllArgs": true
      }
    },
    "setup": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx tools/workspace-cli/src/cli.ts setup --service=server",
        "forwardAllArgs": true
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx tools/workspace-cli/src/cli.ts start --service=server",
        "forwardAllArgs": true
      }
    },
    "start-dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm --prefix apps/server-nest run start:dev",
        "forwardAllArgs": true
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm --prefix apps/server-nest run test",
        "forwardAllArgs": true
      }
    },
    "restart": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx tools/workspace-cli/src/cli.ts restart --service=server",
        "forwardAllArgs": true
      }
    },
    "stop": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx tools/workspace-cli/src/cli.ts stop --service=server",
        "forwardAllArgs": true
      }
    },
    "test-coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm --prefix apps/server-nest run test:coverage",
        "forwardAllArgs": true
      }
    },
    "test-coverage-e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm --prefix apps/server-nest run test:coverage:e2e",
        "forwardAllArgs": true
      }
    },
    "test-e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm --prefix apps/server-nest run test:e2e",
        "forwardAllArgs": true
      }
    },
    "test-scenarios": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm --prefix apps/server-nest run test:scenarios",
        "forwardAllArgs": true
      }
    },
    "test-watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm --prefix apps/server-nest run test:watch",
        "forwardAllArgs": true
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node apps/server-nest/scripts/migrate.mjs",
        "forwardAllArgs": true
      },
      "configurations": {
        "dry-run": {
          "command": "node apps/server-nest/scripts/migrate.mjs --dry-run"
        },
        "list": {
          "command": "node apps/server-nest/scripts/migrate.mjs --list"
        }
      }
    }
  },
  "tags": [
    "scope:server"
  ]
}